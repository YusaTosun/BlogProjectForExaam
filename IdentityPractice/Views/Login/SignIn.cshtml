@{
    Layout = null;
}


@model UserSignInModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - loginTemplate</title>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">

            @*		------------------	Main Content START ---------------*@

            <div class="parent clearfix">
                <div class="bg-illustration">
                    <img src="https://i.ibb.co/Pcg0Pk1/logo.png" alt="logo">

                </div>

                <div class="login">
                    <div class="container">
                        <h1>Login to access to<br />your account</h1>

                        <div class="login-form">
                            <form asp-action="SignIn" asp-controller="Login" method="post" >
                             

                                <input asp-for="Username" placeholder="Username">
                                <input asp-for="Password" placeholder="Password">

                                <div class="remember-form">
                                    <input type="checkbox" asp-for="RememberMe">
                                    <span>Remember me</span>
                                 @*   <div>Remember Me? <input type="checkbox" asp-for="RememberMe" /></div>*@
                                </div>
                                <div class="forget-pass">
                                    <a href="#">Forgot Password ?</a>
                                    <a style="color:deeppink" asp-action="SignUp">Don't you have an account ?</a>
                                </div>

                                <button type="submit" asp-route-returnUrl="/Home/HomePage" >SIGN-IN</button>


                            </form>
                        </div>

                    </div>
                </div>
            </div>

            @*		------------------	Main Content END ---------------*@

        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>