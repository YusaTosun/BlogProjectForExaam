                    @*BURASI Yine databaseden sorgu ile getirebileceğimiz bir yer fakat javasc ile çalışıyor sanırım.*@

                    @*-----------------Sorgu---------------------------*@


                    <div class="inner-main-body p-2 p-sm-3 collapse forum-content show">



                        <div class="card mb-2">
                            <div class="card-body p-2 p-sm-3">
                                <div class="media forum-item">

                                    <div class="media-body">
                                        <h6 class="text-body">@Model.Title</h6>
                                        <p class="text-secondary">
                                            @Model.Content
                                        </p>
                                        <p class="text-muted"> Created By @Model.Author.Email <span class="text-secondary font-weight-bold">@Model.Date</span></p>
                                    </div>
                                    <div class="text-muted small text-center align-self-center">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>




                @foreach (Comment comment in Model.Comments)
                    {

                        <div class="card mb-2">
                            <div class="card-body p-2 p-sm-3">
                                <div class="media forum-item">

                                    <div class="media-body">
                                      
                                        <p class="text-secondary">
                                            @comment.Text
                                        </p>
                                        <p class="text-muted"> Mentioned By @Model.Author.Email <span class="text-secondary font-weight-bold">@Model.Date</span></p>
                                    </div>
                                    <div class="text-muted small text-center align-self-center">
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="card mb-2">
                        <div class="card-body">
                            <div>
                                <form asp-action="AddComment" asp-controller="Home" >
                                    <input type="hidden" name="postid" value="@Model.PostId"/>
                                    <div class="d-flex d-wrap">
                                        <textarea class="w-100" name="commenttext"></textarea>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <input type="submit" class="btn btn-primary f-right"
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
